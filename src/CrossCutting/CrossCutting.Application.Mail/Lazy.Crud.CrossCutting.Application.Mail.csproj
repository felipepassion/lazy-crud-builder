<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>Lazy.Crud.CrossCutting.Application.Mail</Title>
    <Description>Mail abstractions/utilities for Lazy.Crud</Description>
    <PackageId>Lazy.Crud.CrossCutting.Application.Mail</PackageId>
    <Authors>felipepassion</Authors>
    <RepositoryUrl>https://github.com/felipepassion/lazy-crud-builder</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>lazycrud;mail</PackageTags>
    <PackageLicenseFile>LICENSE.TXT</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <Version>1.0.11</Version>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Validators\**" />
    <EmbeddedResource Remove="Validators\**" />
    <None Remove="Validators\**" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\..\LICENSE.TXT" Pack="true" PackagePath="\" Condition="Exists('..\\..\\..\\..\\LICENSE.TXT')" />
  </ItemGroup>

  <ItemGroup>
    <None Update="LICENSE.TXT">
      <PackagePath>\</PackagePath>
      <Pack>True</Pack>
    </None>
  </ItemGroup>

</Project>
